{
	"compilerOptions": {
		"baseUrl": ".",
		"strict": true,
		"module": "CommonJS",
		"target": "ES6",
		"lib": ["es6", "dom"],
		"types": ["reflect-metadata"],
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"rootDir": "src",
		"outDir": "./bin",
		"skipLibCheck": true,
		"useUnknownInCatchVariables": false,
		"esModuleInterop": true,
		"paths": {
			"src/*": ["src/*"]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
